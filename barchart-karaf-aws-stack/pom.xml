<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.barchart.base</groupId>
		<artifactId>barchart-archon</artifactId>
		<version>2.3.2</version>
		<relativePath />
	</parent>

	<groupId>com.barchart.karaf</groupId>
	<artifactId>barchart-karaf-aws-stack</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<description>amazon launcher</description>

	<properties>

		<!-- location of build resources on local -->
		<publishSource>${basedir}/target/publish</publishSource>
		<!-- location of build resources on remote -->
		<publishTarget>/tmp/publish_${projectTimeFile}</publishTarget>

		<!-- path to install script on remote -->
		<publishInstall>${publishTarget}/install.sh</publishInstall>

	</properties>

	<profiles>

		<profile>

			<id>image-launch</id>

			<build>

				<plugins>

					<!-- copy config templates -->
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-resources-plugin</artifactId>
						<executions>
							<execution>
								<id>publish-prepare</id>
								<goals>
									<goal>copy-resources</goal>
								</goals>
								<phase>package</phase>
								<configuration>
									<resources>
										<resource>
											<directory>${basedir}/src/main/script</directory>
											<filtering>true</filtering>
										</resource>
										<resource>
											<directory>${basedir}/src/main/template</directory>
											<filtering>true</filtering>
										</resource>
									</resources>
									<outputDirectory>${publishSource}</outputDirectory>
								</configuration>
							</execution>
						</executions>
					</plugin>

					<!-- image launch -->
					<plugin>

						<groupId>com.carrotgarden.maven</groupId>
						<artifactId>carrot-maven-aws-plugin</artifactId>
						<version>1.1.2</version>

						<configuration>

							<!-- used by cloud formation & elastic compute goals -->
							<amazonRegion>${amazonRegion}</amazonRegion>

							<!-- used by cloud formation goals -->
							<stackName>${stackName}</stackName>
							<stackServerId>barchart-karaf-stack</stackServerId>
							<stackTemplateFile>${publishSource}/formation.template</stackTemplateFile>
							<stackPropertiesInputFile>${publishSource}/formation.properties</stackPropertiesInputFile>
							<stackInputParams>
							</stackInputParams>

						</configuration>

					</plugin>

				</plugins>

			</build>

		</profile>

		<profile>
			<id>stack-create</id>
			<properties>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>com.carrotgarden.maven</groupId>
						<artifactId>carrot-maven-aws-plugin</artifactId>
						<version>1.1.2</version>
						<executions>
							<execution>
								<id>stack-create</id>
								<phase>package</phase>
								<goals>
									<goal>cloud-formation-create</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>

		<profile>
			<id>stack-delete</id>
			<properties>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>com.carrotgarden.maven</groupId>
						<artifactId>carrot-maven-aws-plugin</artifactId>
						<version>1.1.2</version>
						<executions>
							<execution>
								<id>stack-delete</id>
								<phase>package</phase>
								<goals>
									<goal>cloud-formation-delete</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>

	</profiles>

</project>

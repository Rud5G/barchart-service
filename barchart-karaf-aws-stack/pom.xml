<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.barchart.base</groupId>
		<artifactId>barchart-archon</artifactId>
		<version>2.3.2</version>
		<relativePath />
	</parent>

	<groupId>com.barchart.karaf</groupId>
	<artifactId>barchart-karaf-aws-stack</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<description>amazon launcher</description>

	<properties>

		<!-- location of build resources on local -->
		<publishSource>${basedir}/target/publish</publishSource>
		<!-- location of build resources on remote -->
		<publishTarget>/tmp/publish_${projectTimeFile}</publishTarget>

		<!-- path to install script on remote -->
		<publishInstall>${publishTarget}/install.sh</publishInstall>

	</properties>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>com.carrotgarden.maven</groupId>
					<artifactId>carrot-maven-aws-plugin</artifactId>
					<version>1.1.4</version>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<profiles>

		<profile>

			<id>image-launch</id>

			<build>

				<plugins>

					<!-- copy config templates -->
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-resources-plugin</artifactId>
						<executions>
							<execution>
								<id>publish-prepare</id>
								<goals>
									<goal>copy-resources</goal>
								</goals>
								<phase>package</phase>
								<configuration>
									<resources>
										<resource>
											<directory>${basedir}/src/main/script</directory>
											<filtering>true</filtering>
										</resource>
										<resource>
											<directory>${basedir}/src/main/template</directory>
											<filtering>true</filtering>
										</resource>
									</resources>
									<outputDirectory>${publishSource}</outputDirectory>
								</configuration>
							</execution>
						</executions>
					</plugin>

					<!-- parse template parameters -->
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>groovy-maven-plugin</artifactId>
						<executions>
							<execution>
								<id>provide-custom-properties</id>
								<phase>validate</phase>
								<goals>
									<goal>execute</goal>
								</goals>
								<configuration>
									<source>
					<![CDATA[
					//
					def ParamIdentity = project.properties["ParamIdentity"]
					def KnownZoneList = [ 
						"aws.barchart.com", 
						"aws-dev.barchart.com", 
						"eqx.barchart.com", 
						"eqx-dev.barchart.com", 
						"websol.barchart.com" 
					]
					for ( zone in KnownZoneList ) {
						if( ParamIdentity.endsWith(zone) ) {
							project.properties["ParamHostName"] = ParamIdentity + "."
							project.properties["ParamZoneName"] = zone + "."
							return
						}
					}
					throw new Exception("unknown identity dns zone")			
					//
					]]>
									</source>
								</configuration>
							</execution>
						</executions>
					</plugin>

					<!-- image launch -->
					<plugin>

						<groupId>com.carrotgarden.maven</groupId>
						<artifactId>carrot-maven-aws-plugin</artifactId>

						<configuration>

							<amazonRegion>${amazonRegion}</amazonRegion>

							<stackName>${stackName}</stackName>

							<stackServerId>barchart-karaf-stack</stackServerId>

							<stackTemplateFile>${publishSource}/${stackTemplateFile}</stackTemplateFile>

							<stackInputParams>
								<ParamIdentity>${ParamIdentity}</ParamIdentity>
								<ParamInstanceType>${ParamInstanceType}</ParamInstanceType>
								<ParamKeyName>${ParamKeyName}</ParamKeyName>
								<ParamTopicName>${ParamTopicName}</ParamTopicName>
								<ParamMinSize>${ParamMinSize}</ParamMinSize>
								<ParamMaxSize>${ParamMaxSize}</ParamMaxSize>
								<ParamSecurityGroup>${ParamSecurityGroup}</ParamSecurityGroup>
								<ParamHostName>${ParamHostName}</ParamHostName>
								<ParamZoneName>${ParamZoneName}</ParamZoneName>
							</stackInputParams>

						</configuration>

					</plugin>

				</plugins>

			</build>

		</profile>

		<profile>
			<id>stack-create</id>
			<properties>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>com.carrotgarden.maven</groupId>
						<artifactId>carrot-maven-aws-plugin</artifactId>
						<executions>
							<execution>
								<id>stack-create</id>
								<phase>package</phase>
								<goals>
									<goal>cloud-formation-create</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>

		<profile>
			<id>stack-delete</id>
			<properties>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>com.carrotgarden.maven</groupId>
						<artifactId>carrot-maven-aws-plugin</artifactId>
						<executions>
							<execution>
								<id>stack-delete</id>
								<phase>package</phase>
								<goals>
									<goal>cloud-formation-delete</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>

	</profiles>

</project>
